{{!--
    Wonder Cabinet Tag Archive Header
    Hero section with galaxy background for tag pages
    Supports optional feature_image for series artwork
--}}

<section class="wc-tag-hero{{#if feature_image}} has-feature-image{{/if}}">
    <div class="wc-tag-hero-bg">
        <img src="{{@custom.galaxy_background_image}}" alt="" class="wc-tag-hero-galaxy">
    </div>
    <div class="wc-tag-hero-content gh-inner">
        {{#if feature_image}}
            <div class="wc-tag-hero-image">
                <img src="{{img_url feature_image size="m"}}" alt="{{name}}">
            </div>
        {{/if}}
        <h1 class="wc-tag-hero-title">{{name}}</h1>
        {{!-- Short tagline only shown if NO extended description --}}
        {{!-- When description exists, it moves to the series info section --}}
    </div>
</section>
