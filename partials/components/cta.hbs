{{!--
    Wonder Cabinet Email CTA
    Simple subscribe call-to-action (no decorative brackets)
--}}

{{#if @site.members_enabled}}
    {{#unless @member}}
        <section class="wc-cta gh-outer">
            <div class="wc-cta-inner gh-inner">
                <p class="wc-cta-text">Get the latest episodes directly in your inbox</p>
                <button class="wc-cta-input" data-portal>
                    <span class="wc-cta-placeholder">jamie@example.com</span>
                    <span class="wc-cta-btn">Subscribe</span>
                </button>
            </div>
        </section>
    {{/unless}}
{{/if}}
